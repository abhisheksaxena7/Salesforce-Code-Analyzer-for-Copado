{
  "name": "Run SFDX Codeanalyzer QIF",
  "apiname": "Run SFDX Codeanalyzer QIF",
  "type": "Custom",
  "description": null,
  "version": 1,
  "volumeoptions": null,
  "steps": [
    {
      "name": "Run SFDX Code Analyzer",
      "type": "Function",
      "customtype": "Function",
      "config": {
        "functionName": "Run_CodeAnalyzer_QIF",
        "parameters": [
          {
            "name": "git_json",
            "value": "{$Context.Repository.Credential}"
          },
          {
            "name": "branchesAndFileIdJson",
            "value": "{$Context.Apex.copadoQuality.RetrieveBranchesAndFileIdForPmdScan}"
          },
          {
            "name": "severityThreshold",
            "value": "{$Pipeline.Property.sfdx_scanner_severityThreshold}"
          },
          {
            "name": "targetBranch",
            "value": "{$Context.JobExecution__r.DataJson.destinationBranchName}"
          },
          {
            "name": "baseBranch",
            "value": "{$Context.JobExecution__r.DataJson.baseBranch}"
          }
        ]
      }
    }
  ]
}
